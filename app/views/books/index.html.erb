<div class="grid grid-cols-1 md:grid-cols-6">
  <% @books.each do |book| %>
    <div class="flex justify-center my-5 w-auto">
      <div class="lg:flex flex-1">
        <div class="lg:m-2 shadow-md hover:shadow-lg hover:bg-gray-100 rounded-lg bg-gray-50 md:my-5 ">
          <%= image_tag book.image, alt: "", class: "overflow-hidden"%>
          <div class="p-4">
            <div class="my-2">
              <h3 class="font-medium text-gray-600 text-lg my-2 uppercase"><%=book.title%></h3>
              <h5 class="font-medium text-gray-600 text-lg my-2"><%=book.author%></h5>
              <p class="text-justify "><%=book.description.truncate_words(18)%></p>
            </div>
            <div class="md:my-2">
              <%= link_to 'Mostrar mais', book, class:"hover:bg-gray-700 rounded-full py-2 px-3 font-semibold hover:text-white bg-gray-400 text-gray-100" %>
              <% if user_signed_in? %>
                <%= link_to 'Edit', edit_book_path(book) %>
                <%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
